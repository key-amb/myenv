# bash

. $BASE_DIR/lib/package/dpkg.bashrc

# Install packages
install_pkg \
  git vim zsh tmux tree \
  jq mysql-client direnv \
  peco curl

# Install Homebrew
# See https://brew.sh/
if [[ ! -d /home/linuxbrew/.linuxbrew ]]; then
  /bin/bash -c \
    "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
fi

